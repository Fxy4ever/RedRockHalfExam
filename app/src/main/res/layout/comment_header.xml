<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="1dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comment_kind"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="#5E7FFA"
                    android:text="#线代#"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/comment_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:text="               常规题目。常规题目。常规题目。常规题目。常规题目。常规题目。常规题目。常规题目。常规题目。常规题目。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#B2DAF6"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.example.mac.oncqupthands.utils.ShapeImageView
                    android:id="@+id/comment_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:siv_shape_type="circle"
                    android:src="@mipmap/ic_launcher_round"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/comment_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fxymine4ever"
                            android:textColor="#000000"
                            android:textSize="12dp" />
                        <ImageView
                            android:id="@+id/comment_gender"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/boy"
                            android:layout_width="13dp"
                            android:layout_height="13dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/comment_time"
                        android:layout_marginTop="5dp"
                        android:text="2018-05-26"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:id="@+id/comment_jifen"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="#9CA5FB"
                            android:textSize="10dp"
                            android:layout_gravity="right"
                            android:layout_width="31dp"
                            android:layout_height="12dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/comment_content1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:text="这是回答。这是回答。这是回答。这是回答。这是回答。这是回答。这是回答。这是回答。这是回答。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                android:layout_marginTop="10dp"
                android:background="#F2F4F5"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comment_size"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论0"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
