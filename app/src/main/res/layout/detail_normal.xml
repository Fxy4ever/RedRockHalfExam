<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <android.support.v7.widget.CardView
       android:layout_marginLeft="2dp"
       android:layout_marginRight="2dp"
       android:layout_marginBottom="2dp"
       app:cardCornerRadius="2dp"
       app:cardElevation="2dp"
       android:backgroundTint="#FFFFFF"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.example.mac.oncqupthands.utils.ShapeImageView
                   android:id="@+id/detail_normal_avatar"
                   android:layout_gravity="center"
                   android:src="@mipmap/ic_launcher_round"
                   android:layout_width="45dp"
                   android:layout_height="45dp" />
               <TextView
                   android:id="@+id/detail_normal_name"
                   android:layout_gravity="center"
                   android:layout_marginLeft="5dp"
                   android:textSize="15sp"
                   android:text="冯学霸"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <ImageView
                   android:id="@+id/detail_normal_gender"
                   android:layout_width="15dp"
                   android:layout_height="12dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="3dp"
                   android:background="@drawable/boy" />
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/detail_normal_accept"
                       android:text="未采纳"
                       android:textSize="15sp"
                       android:layout_gravity="right|center"
                       android:layout_marginRight="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </FrameLayout>
           </LinearLayout>
           <TextView
               android:id="@+id/detail_normal_content"
               android:layout_marginLeft="18dp"
               android:layout_marginRight="18dp"
               android:text="这是一个回答。这是一个回答。这是一个回答。
        这是一个回答。这是一个回答。这是一个回答。这是一个回答。这是一个回答。
        这是一个回答。这是一个回答。这是一个回答。"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/detail_normal_ShowMore"
               android:layout_gravity="right"
               android:layout_marginTop="10dp"
               android:layout_marginRight="20dp"
               android:layout_marginBottom="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="展开更多"
               android:textColor="#5E7FFA"
               android:textSize="15sp"
               android:layout_marginLeft="20dp"
               />

           <LinearLayout
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="10dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/detail_normal_createTime"
                   android:textSize="14sp"
                   android:layout_gravity="center"
                   android:text="2018-05-25"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_gravity="right"
                       android:layout_marginRight="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                           <ImageButton
                               android:id="@+id/detail_normal_commit"
                               android:background="@drawable/commit"
                               android:layout_width="20dp"
                               android:layout_height="18dp" />
                           <TextView
                               android:id="@+id/detail_normal_commit_num"
                               android:textSize="14sp"
                               android:layout_marginLeft="5dp"
                               android:text="15"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_marginLeft="25dp"
                           android:orientation="horizontal"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                           <ImageButton
                               android:id="@+id/detail_normal_good"
                               android:background="@drawable/good_fail"
                               android:layout_width="20dp"
                               android:layout_height="18dp" />
                           <TextView
                               android:id="@+id/detail_normal_good_num"
                               android:textSize="14sp"
                               android:layout_marginLeft="5dp"
                               android:text="25"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                   </LinearLayout>
               </FrameLayout>


           </LinearLayout>
       </LinearLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>
