<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <com.example.mac.oncqupthands.utils.ShapeImageView
                    android:id="@+id/question_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:siv_shape_type="circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/question_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fxymine4ever"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:id="@+id/question_gender"
                            android:layout_width="10dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="3dp"
                             />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/question_time"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="5dp"
                        android:text="还有几分钟消失"
                        android:textSize="10dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/jifenanniu" />

                        <TextView
                            android:id="@+id/question_jifen"
                            android:layout_width="31dp"
                            android:layout_height="12dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="5dp"
                            android:text="5积分"
                            android:textSize="10dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/question_fenlei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#英语#"
                    android:textColor="#7195FA"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:text="这里有个问题 大神可以解答吗"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/question_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是一个问题"
                    android:textSize="15sp" />
                <FrameLayout
                    android:layout_below="@id/question_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/question_ViewPic"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_alignLeft="@id/question_content"
                        android:layout_below="@+id/question_content"
                        android:layout_marginTop="5dp"
                        android:text="查看图片"
                        android:textColor="#7195FA"
                        android:textSize="15sp" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
